class Human
	attr_reader :year
	attr_accessor :wallet
	def initialize
		@year = howManyYears.to_i
		@wallet = 100
	end
	
	def howManyYears
		while true
			print "Сколько вам лет => "
			if y = Integer(gets) rescue false
				if y > 0 && y <= 100
					return y
				end
			else
				puts "Вы ввели не возраст"
				puts ""
			end	
		end
	end
end

class Casino
	def rollMachin
		@oneRoll = rand(10).to_s
		@twoRoll = rand(10).to_s
		@threeRoll = rand(10).to_s
	end

	def checkingForThePossibilityOfAGame?(year)
		puts year
		if year >= 18
			return true 
		else
			return false
		end
	end

	def checkRoll
		rollMachin
		puts roll = @oneRoll + @twoRoll + @threeRoll
		case roll.to_i
		when 111
			return 10
		when 222
			return 20
		when 333
			return 30
		when 444
			return 40
		when 555
			return 50
		when 666
			return 60
		when 777
			return 70
		when 888
			return 80
		when 999
			return 90
		when 000
			return 100
		else
			return -10
		end
	end

	def money?(wallet)
		if wallet > 0
			return true 
		else
			return false
		end
	end

	def startGame(wallet)
		while money?(wallet)
			puts "Хотите крутить? Y/N"
			if gets.chomp == "Y"
				wallet = wallet + checkRoll
				puts "У вас осталось #{wallet}$"
				puts
			else
				puts "У вас не осталось денег"
				puts
				break
			end
		end
	end
end

casino = Casino.new
gamers = Human.new
if casino.checkingForThePossibilityOfAGame?(gamers.year)
	puts "Добро поожаловать"
	casino.startGame(gamers.wallet)
else
	puts "Вы не имеете права играть в азартные игры"
end
