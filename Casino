class Casino
	attr_reader :year 
	def initialize
		@oneRoll = rand(10).to_s
		@twoRoll = rand(10).to_s
		@threeRoll = rand(10).to_s
		@year = howManyYears.to_i
		@wallet = 100
	end

	def howManyYears
		while true
			print "Сколько вам лет => "
			if y = Integer(gets) rescue false
				if y > 0 && y <= 100
					return y
				end
			else
				puts "Вы ввели не возраст"
				puts ""
			end	
		end
	end

	def checkingForThePossibilityOfAGame?
		if @year >= 18
			return true
		else
			return false
		end
	end

	def checkRoll
		puts roll = @oneRoll + @twoRoll + @threeRoll
		case roll.to_i
		when 111
			return 10
		when 222
			return 20
		when 333
			return 30
		when 444
			return 40
		when 555
			return 50
		when 666
			return 60
		when 777
			return 70
		when 888
			return 80
		when 999
			return 90
		when 000
			return 100
		else
			return 0
		end
	end

	def startGame
		if checkingForThePossibilityOfAGame?
			
				puts checkRoll

		else
			puts "Вы не имеете права играть в азартные игры"
		end
	end
end

game = Casino.new
game.startGame
